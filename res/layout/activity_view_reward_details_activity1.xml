<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs160.surveyparrot.ViewRewardDetailsActivity1" >
    
     <TextView
        android:id="@+id/rewardName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Reward Name"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        />
     
       <TextView
        android:id="@+id/amountLabel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/rewardName1"
        android:layout_marginTop="30dp"
        android:text="Reward:"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        />
        <TextView
        android:id="@+id/amountValue1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/amountLabel1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/amountLabel1"
        android:text="$10.00"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
          <TextView
        android:id="@+id/expiration1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/amountLabel1"
        android:layout_below="@+id/amountLabel1"
        android:layout_marginTop="25dp"
        android:text="Expiration:"
        android:textAppearance="?android:attr/textAppearanceMedium" />
          
         <TextView
        android:id="@+id/expirationValue1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/expiration1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/expiration1"
        android:text="06/15/2014"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/redeemButton1"
        style="@style/buttonTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="82dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Redeem" />

    <TextView
        android:id="@+id/detailsLabel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/expiration1"
        android:layout_below="@+id/expiration1"
        android:layout_marginTop="29dp"
        android:text="Details:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/rewardDetails1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/detailsLabel1"
        android:layout_alignBottom="@+id/detailsLabel1"
        android:layout_alignLeft="@+id/expirationValue1"
        android:text="Earned on 03/07/14 from Snacks Survey."
        android:textSize="16sp" />
    
 </RelativeLayout>
       
       
       