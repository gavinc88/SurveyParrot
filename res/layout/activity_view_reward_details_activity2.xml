<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs160.surveyparrot.ViewRewardDetailsActivity2" >

	<TextView
        android:id="@+id/rewardName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Reward Name"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        />
     
       <TextView
        android:id="@+id/amountLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/rewardName2"
        android:layout_marginTop="30dp"
        android:text="Reward:"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        />
         
       
         <TextView
        android:id="@+id/expiration2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/detailsLabel2"
        android:layout_below="@+id/amountLabel2"
        android:layout_marginTop="28dp"
        android:text="Expiration:"
        android:textAppearance="?android:attr/textAppearanceMedium" />
       
         <TextView
        android:id="@+id/expirationValue2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/expiration2"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/expiration2"
        android:text="07/30/2014"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
        android:id="@+id/amountValue2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/amountLabel2"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/amountLabel2"
        android:text="$10.00"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/redeemButton2"
        style="@style/buttonTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rewardDetails2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Redeem" />

  
    <TextView
        android:id="@+id/rewardDetails2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/amountValue2"
        android:layout_below="@+id/expirationValue2"
        android:layout_marginTop="30dp"
        android:text="Earned on 03/07/14 from Snacks Survey."
        android:textSize="16sp" />

    <TextView
        android:id="@+id/detailsLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/amountLabel2"
        android:layout_alignTop="@+id/rewardDetails2"
        android:text="Details:"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
 </RelativeLayout>