<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:weightSum="10"
    tools:context="com.cs160.surveyparrot.MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight=".2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/welcomeUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Welcome, SurveyParrotUser!"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/parrotImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4.4"
        android:adjustViewBounds="true"
        android:src="@drawable/survey_parrot_big_square" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="4.7"
        android:orientation="vertical" >

        <Button
            android:id="@+id/bResumeSurvey"
            style="@style/buttonTheme"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Resume Survey" />

        <Button
            android:id="@+id/bStartSurvey"
            style="@style/buttonTheme"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Start New Survey" />

        <Button
            android:id="@+id/bRedeemRewards"
            style="@style/buttonTheme"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Redeem Rewards" />
    </LinearLayout>

</LinearLayout>